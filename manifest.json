{
  "name": "ITFlow Login Helper",
  "description": "Helps to fill login forms using the ITFlow login database.",
  "version": "0.0.0.2",
  "manifest_version": 3,

  "action": {
	  "default_title": "Click to fill credentials"
  },

  "options_ui": {
    "page": "options.html"
  },

  "background": {
    "service_worker": "background.js"
  },
  
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  
  "icons": 
  { 
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
   "128": "icons/icon96-128.png" 
  }
}