{
  "name": "ITFlow Login Helper",
  "description": "Helps to fill login forms using the ITFlow login database.",
  "version": "0.0.0.1",
  "manifest_version": 3,

  "action": {
	  "default_title": "Click to fill credentials"
  },

  "options_ui": {
    "page": "options.html"
  },

  "background": {
    "service_worker": "background.js"
  },
  
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ]
}